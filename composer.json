{
    "name": "aremiki/oauth2-steam",
    "description": "This package provides Steam OAuth2 support for PHP League's OAuth 2.0 Client.",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdelhakim Remiki",
            "email": "abdelhakim.remiki@gmail.com"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authentication",
        "steam"
    ],
    "require": {
        "php": ">=8.1",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Aremiki\\Oauth2Steam\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aremiki\\Oauth2Steam\\Client\\Test\\": "tests/"
        }
    }
}
